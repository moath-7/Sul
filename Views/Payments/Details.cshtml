@model RealEstateManagement.Models.Payment

@{
	ViewData["Title"] = "Payment Details";
}

<h1>Payment Details</h1>

<div>
	<h4>Payment</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">Date</dt>
		<dd class="col-sm-10">@Model.PaymentDate</dd>
		<dt class="col-sm-2">Amount</dt>
		<dd class="col-sm-10">@Model.AmountPaid</dd>
		<dt class="col-sm-2">Method</dt>
		<dd class="col-sm-10">@Model.PaymentMethod</dd>
	</dl>

	<a asp-action="Edit" asp-route-id="@Model.Payment_ID" class="btn btn-primary">Edit</a>
	<a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
