@model IEnumerable<RealEstateManagement.Models.Payment>

@{
	ViewData["Title"] = "المدفوعات";
}

<h1>المدفوعات</h1>

<p>
	<a asp-action="Create" class="btn btn-primary">إنشاء جديد</a>
</p>

<table class="table table-striped">
	<thead>
		<tr>
			<th>التاريخ</th>
			<th>المبلغ</th>
			<th>طريقة الدفع</th>
			<th>إجراءات</th>
		</tr>
	</thead>
	<tbody>
	@if (Model != null) {
		foreach (var item in Model)
		{
			<tr>
				<td>@item.PaymentDate.ToShortDateString()</td>
				<td>@item.AmountPaid</td>
				<td>@item.PaymentMethod</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Payment_ID">تعديل</a> |
					<a asp-action="Details" asp-route-id="@item.Payment_ID">تفاصيل</a> |
					<a asp-action="Delete" asp-route-id="@item.Payment_ID">حذف</a>
				</td>
			</tr>
		}
	}
	</tbody>
</table>
