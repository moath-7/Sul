@model RealEstateManagement.Models.Property

@{
	ViewData["Title"] = "Edit Property";
}

<h1>Edit Property</h1>

<form asp-action="Edit" method="post">
	@Html.AntiForgeryToken()
	<input type="hidden" asp-for="Property_ID" />
	<div class="form-group">
		<label asp-for="Address" class="control-label"></label>
		<input asp-for="Address" class="form-control" />
		<span asp-validation-for="Address" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="PropertyType" class="control-label"></label>
		<input asp-for="PropertyType" class="form-control" />
		<span asp-validation-for="PropertyType" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Area" class="control-label"></label>
		<input asp-for="Area" class="form-control" />
		<span asp-validation-for="Area" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Price" class="control-label"></label>
		<input asp-for="Price" class="form-control" />
		<span asp-validation-for="Price" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Status" class="control-label"></label>
		<input asp-for="Status" class="form-control" />
		<span asp-validation-for="Status" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Agent_ID" class="control-label"></label>
		<select asp-for="Agent_ID" class="form-control" asp-items="@(ViewData["AgentID"] as Microsoft.AspNetCore.Mvc.Rendering.SelectList)">
			<option value="">-- Select Agent --</option>
		</select>
		<span asp-validation-for="Agent_ID" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary">Save</button>
	<a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
