@model RealEstateManagement.Models.Property

@{
	ViewData["Title"] = "Property Details";
}

<h1>Property Details</h1>

<div>
	<h4>Property</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">Address</dt>
		<dd class="col-sm-10">@Model.Address</dd>

		<dt class="col-sm-2">Type</dt>
		<dd class="col-sm-10">@Model.PropertyType</dd>

		<dt class="col-sm-2">Area</dt>
		<dd class="col-sm-10">@Model.Area</dd>

		<dt class="col-sm-2">Price</dt>
		<dd class="col-sm-10">@Model.Price</dd>

		<dt class="col-sm-2">Status</dt>
		<dd class="col-sm-10">@Model.Status</dd>
	</dl>

	<a asp-action="Edit" asp-route-id="@Model.Property_ID" class="btn btn-primary">Edit</a>
	<a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
