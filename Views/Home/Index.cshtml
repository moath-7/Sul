@{
    ViewData["Title"] = "Real Estate Management System";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="text-center mb-5">
                <h1 class="display-4 text-primary">Real Estate Management System</h1>
                <p class="lead text-muted">Professional platform for managing properties, agents, customers, contracts, and payments</p>
            </div>

            <div class="row g-4 mb-5">
                <div class="col-md-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">?? Manage Properties</h5>
                            <p class="card-text">Track all your real estate properties with detailed information including location, type, area, price, and assigned agents.</p>
                            <a href="/Properties" class="btn btn-primary btn-sm">Go to Properties</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">?? Manage Customers</h5>
                            <p class="card-text">Maintain a comprehensive database of buyers and renters with contact information and transaction history.</p>
                            <a href="/Customers" class="btn btn-primary btn-sm">Go to Customers</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">?? Manage Agents</h5>
                            <p class="card-text">Keep track of your real estate agents, their contact details, and the regions they cover.</p>
                            <a href="/Agents" class="btn btn-primary btn-sm">Go to Agents</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">?? Manage Contracts</h5>
                            <p class="card-text">Handle sales and rental agreements between properties, customers, and agents with complete contract management.</p>
                            <a href="/Contracts" class="btn btn-primary btn-sm">Go to Contracts</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">?? Manage Payments</h5>
                            <p class="card-text">Track all payments associated with contracts, monitor payment dates, amounts, and methods.</p>
                            <a href="/Payments" class="btn btn-primary btn-sm">Go to Payments</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="alert alert-info" role="alert">
                <h5 class="alert-heading">?? Welcome to Your Real Estate Hub!</h5>
                <p>
                    This system is designed to streamline your real estate business operations. Use the navigation menu above 
                    to access different sections, or click any card below to start managing your real estate portfolio.
                </p>
                <hr>
                <p class="mb-0">
                    <strong>Features:</strong> Complete CRUD operations for all entities, relationship management between 
                    properties and transactions, and a user-friendly interface for efficient business management.
                </p>
            </div>

            <div class="row mt-4">
                <div class="col-md-4 text-center">
                    <h6 class="text-muted">Properties Managed</h6>
                    <p class="h4 text-primary">??</p>
                </div>
                <div class="col-md-4 text-center">
                    <h6 class="text-muted">Active Contracts</h6>
                    <p class="h4 text-success">??</p>
                </div>
                <div class="col-md-4 text-center">
                    <h6 class="text-muted">Client Satisfaction</h6>
                    <p class="h4 text-warning">?</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1) !important;
    }
    
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
    
    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }
</style>
