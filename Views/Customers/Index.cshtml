@model IEnumerable<RealEstateManagement.Models.Customer>

@{
	ViewData["Title"] = "Customers";
}

<h1>Customers</h1>

<p>
	<a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Phone</th>
			<th>Email</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
	@if (Model != null) {
		foreach (var item in Model)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.PhoneNumber</td>
				<td>@item.Email</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Customer_ID">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Customer_ID">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Customer_ID">Delete</a>
				</td>
			</tr>
		}
	}
	</tbody>
</table>
