@model IEnumerable<RealEstateManagement.Models.Customer>

@{
	ViewData["Title"] = "العملاء";
}

<h1>العملاء</h1>

<p>
	<a asp-action="Create" class="btn btn-primary">إنشاء جديد</a>
</p>

<table class="table table-striped">
	<thead>
		<tr>
			<th>الاسم</th>
			<th>الهاتف</th>
			<th>البريد الإلكتروني</th>
			<th>إجراءات</th>
		</tr>
	</thead>
	<tbody>
	@if (Model != null) {
		foreach (var item in Model)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.PhoneNumber</td>
				<td>@item.Email</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Customer_ID">تعديل</a> |
					<a asp-action="Details" asp-route-id="@item.Customer_ID">تفاصيل</a> |
					<a asp-action="Delete" asp-route-id="@item.Customer_ID">حذف</a>
				</td>
			</tr>
		}
	}
	</tbody>
</table>
